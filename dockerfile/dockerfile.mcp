FROM python:3.12-slim

# 避免 Python 生成 .pyc 文件
ENV PYTHONDONTWRITEBYTECODE=1

# 安裝基本的系統工具和依賴
RUN apt-get update && \
    apt-get install -y \
    wget \
    bzip2 \
    ca-certificates \
    curl \
    git \
    build-essential \
    python3-dev \
    docker.io

# 安裝 uv 最新版
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.local/bin:$PATH"

RUN mkdir /venv/
WORKDIR /venv
COPY mcp/pyproject.toml /venv/pyproject.toml
COPY mcp/uv.lock /venv/uv.lock
RUN uv venv
RUN uv sync

RUN mkdir /app
COPY mcp/ /app/
WORKDIR /app
RUN chmod +x /app/entrypoint.sh

# 清除不必要的包和緩存
RUN apt-get clean && rm -rf /var/lib/apt/lists/*